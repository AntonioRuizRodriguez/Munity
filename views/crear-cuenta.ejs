<main class="contenedor contenedor-formulario">
    <h1>
        <%- nombrePagina %>
    </h1>
    <form action="/crear-cuenta" method="post" class="default-form">

        <div class="campo">
            <label>E-mail</label>
            <input type="email" name="email" placeholder="Email">

        </div>
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="nombre">

        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="password">

        </div>
        <div class="campo">
            <label>Repite tu Password</label>
            <input type="password" name="confirmar" placeholder="password">

        </div>
        <div class="enviar">
            <input type="submit" class="btn btn-rosa" value="Crear Cuenta">
        </div>

    </form>
</main>