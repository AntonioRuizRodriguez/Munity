<main class="contenedor contenedor-formularios">
    <h1>
        <%- nombrePagina %>
    </h1>
    <form class="default-form" method="POST">
        <legend>Sobre el Evento</legend>
        <div class="campo">
            <label>Grupo</label>
            <select name="grupoId">
                <option value="" disabled selected>-- Selecciona Grupo --</option>
                <% if(grupos.length> 0 ) { %>
                    <% grupos.forEach(grupo=> { %>
                        <option <%=(evento.grupoId===grupo.id ) ? 'selected' : '' %> value="<%= grupo.id %>"><%=
                                    grupo.nombre%>
                        </option>
                    <% }) %>
                <% } %>
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" value="<%= evento.titulo %>">
        </div>
        <div class="campo">
            <label>Invitado</label>
            <input type="text" name="invitado" value="<%= evento.invitado %>">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <input type="date" name="fecha" value="<%= evento.fecha %>">
            </div>
            <div class="campo">
                <label>Hora</label>
                <input type="time" name="hora" value="<%= evento.hora %>">
            </div>
        </div>
        <div class="campo">
            <label>Aforo</label>
            <input type="number" min="1" name="aforo" value="<%= evento.aforo %>">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= evento.descripcion %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <legend>Ubicación Evento</legend>
        <div class="campo buscador">
            <label>Coloca la Dirección del Evento</label>
            <div class="contenedor-input">
                <input type="text" id="formbuscador" placeholder="Ubicación">
                <small>El asistente colocará una dirección estimada</small>
            </div>
        </div>
        <div id="editar-mapa" class="campo contenedor-mapa">
            <div id="map" ></div>
           
        </div>
        <p class="informacion">Mueve el Pin hasta el punto exacto</p>
        <p class="informacion">Confirma que los siguientes campos sean correctos:</p>

        <div class="campo">
            <label>Dirección</label>
            <input type="text" id="direccion" name="direccion" value="<%= evento.direccion %>">
        </div>
        <div class="campo">
            <label>Ciudad</label>
            <input type="text" id="ciudad" name="ciudad" value="<%= evento.ciudad %>">
        </div>
        <div class="campo">
            <label>Region</label>
            <input type="text" id="region" name="region" value="<%= evento.region %>">
        </div>
        <div class="campo">
            <label>País</label>
            <input type="text" id="pais" name="pais" value="<%= evento.pais %>">
        </div>
        <div class="campo">
            <label>Latitud</label>
            <input id="lat" name="lat" readonly="readonly" value="<%= evento.geoloc.coordinates[0] %>">
        </div>
        <div class="campo">
            <label>Longitud</label>
            <input id="lng" name="lng" readonly="readonly" value="<%= evento.geoloc.coordinates[1] %>">
        </div> 
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Guardar Cambios">
        </div>
    </form>
</main>