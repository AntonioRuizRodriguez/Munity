<main class="contenedor contenedor-formularios no-padding">
    <h1>
        <%= nombrePagina %>
    </h1>
    <form action="/nuevo-grupo" method="post" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="Nombre para el Grupo" />
        </div>
        <div class="campo descripcion">
            <label>Descripcion</label>
            <div class="contenedor-editor">
                <input type="hidden" name="descripcion" id="trix">
                <trix-editor input="trix"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>Categoría</label>
            <select name="categoria">
                <option value="" selected disabled>Selecciona una Categoría</option>
                <% categorias.forEach(categoria => { %>
                    <option value="<%=categoria.id%>"><%= categoria.nombre %> </option>
                <% }); %> 
            </select>
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen">
        </div>
        <div class="campo">
            <label>Pagina Web</label>
            <input type="url" name="url" placeholder="Página Web">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Crear Grupo" class="btn btn-rosa">
        </div>
    </form>
</main>